<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/primary" /> <!-- Warna latar belakang saat aktif -->
        </shape>
        <color android:color="#FFFFFF" /> <!-- Warna teks saat aktif -->
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#EDEDED" /> <!-- Warna latar belakang saat nonaktif -->
        </shape>
        <color android:color="#FFFFFF" /> <!-- Warna teks saat nonaktif -->
    </item>
</selector>